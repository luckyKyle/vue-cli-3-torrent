    transform scale(0.5, 0.5)
@media (-webkit-min-device-px-ratio: 2.5), (-o-min-device-px-ratio: 250 / 100), (min-moz-device-px-ratio: 2.5), (min-device-px-ratio: 2.5)
  [px-border]:after
