$border-color = #d7d7d7

/* utils */
[px-border]
  position relative
  border-width 0
  border-color $border-color
[px-border]:after
  display block
  content ''
  width 100%
  height 100%
  border-radius inherit
  border-color inherit
  border-style solid
  border-width 0
  box-sizing border-box
  position absolute
  left 0
  top 0
/* setting border-width */
[px-border=top]:after
  border-top-width 1px
[px-border=bottom]:after
  border-bottom-width 1px
[px-border=level]:after
  border-top-width 1px
  border-bottom-width 1px
[px-border=left]:after
  border-left-width 1px
[px-border=right]:after
  border-right-width 1px
[px-border=vertical]:after
  border-left-width 1px
  border-right-width 1px
[px-border=all]:after
  border-width 1px
/* media responsed */
@media (-webkit-min-device-px-ratio: 1.25), (-o-min-device-px-ratio: 125 / 100), (min-moz-device-px-ratio: 1.25), (min-device-px-ratio: 1.25)
  [px-border]:after
    width 125%
    height 125%
    -webkit-transform scale(0.8, 0.8)
    transform scale(0.8, 0.8)
    -webkit-transform-origin left top
    transform-origin left top
@media (-webkit-min-device-px-ratio: 1.5), (-o-min-device-px-ratio: 150 / 100), (min-moz-device-px-ratio: 1.5), (min-device-px-ratio: 1.5)
  [px-border]:after
    width 150%
    height 150%
    -webkit-transform scale(0.66666, 0.66666)
    transform scale(0.66666, 0.66666)
@media (-webkit-min-device-px-ratio: 2), (-o-min-device-px-ratio: 200 / 100), (min-moz-device-px-ratio: 2), (min-device-px-ratio: 2)
  [px-border]:after
